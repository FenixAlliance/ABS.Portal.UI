@{
    //Meta Tags - Declarations
    var Date = System.DateTime.Now;
    var DateUTC = System.DateTime.UtcNow;
    var HostDomain = Context.Request.Host;
    var URL = Context.Request.Host + Context.Request.Path;

    var Organization = Configuration["ABS:Portal:Branding:Organization:Name"];
    var Slogan = Configuration["ABS:Portal:Branding:Organization:Slogan"];

    var TitleSuffix = " | " + Configuration["ABS:Portal:SEO:TitleSuffix"];

    var Title = (!string.IsNullOrEmpty(ViewBag.Title) ? (ViewBag.Title) : Configuration["ABS:Portal:SEO:KeyWords"]) + TitleSuffix;

    var keywords = (!string.IsNullOrEmpty(ViewBag.keywords) ? (ViewBag.keywords) : Configuration["ABS:Portal:SEO:KeyWords"]);

    var Description = (!string.IsNullOrEmpty(ViewBag.Description) ? (ViewBag.Description) : Configuration["ABS:Portal:SEO:Description"]);


    var Type = "website";

    // Images
    var AreaName = (!string.IsNullOrEmpty(ViewBag.AreaName) ? (ViewBag.AreaName) : Configuration["ABS:Portal:SEO:TitleSuffix"]);
    var Favicon = !string.IsNullOrEmpty(ViewBag.Favicon) ? (ViewBag.Favicon) : Configuration["ABS:Portal:Branding:Organization:Favicon"];

    // Social
    var TwitterHandler = (!string.IsNullOrEmpty(ViewBag.TwitterHandler) ? (ViewBag.TwitterHandler) : Configuration["ABS:Portal:Branding:Organization:Twitter"]);
    var CreatorTwitterHandler = (!string.IsNullOrEmpty(ViewBag.CreatorTwitterHandler) ? (ViewBag.CreatorTwitterHandler) : Configuration["ABS:Portal:Branding:Creator:Twitter"]);
    var FacebookPageUsername = (!string.IsNullOrEmpty(ViewBag.FacebookPageUsername) ? (ViewBag.FacebookPageUsername) : Configuration["ABS:Portal:Branding:Organization:Facebook"]);

    // Props
    var RevisitAfter = "7 Days";
    var IP = Context.Connection.RemoteIpAddress.ToString();
    var Image = (!string.IsNullOrEmpty(ViewBag.Image) ? (ViewBag.Image) : Configuration["ABS:Portal:SEO:SocialImage"]);
    var Language = (!String.IsNullOrEmpty(Localizer["lang"].ToString()) ? "en" : Localizer["lang"].ToString());
}

