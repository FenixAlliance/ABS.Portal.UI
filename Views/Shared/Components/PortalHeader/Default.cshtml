@model FenixAlliance.ABM.Models.Holders.AccountHolder
@using FenixAlliance.ABS.Portal.Core
@using Microsoft.AspNetCore.Authentication
@using Microsoft.Extensions.Configuration
@using Microsoft.Extensions.Options
@using System.Security.Principal
@using Microsoft.AspNetCore.Mvc.Localization
@using FenixAlliance
@using FenixAlliance.ACL.i18n.Resources
@using FenixAlliance.ACL.Configuration.Types
@using SharedResources = FenixAlliance.ABS.Portal.UI.Resources.SharedResources

@inject SuiteOptions SuiteOptions
@inject IViewLocalizer Localizer
@inject IConfiguration Configuration
@inject IHtmlLocalizer<SharedResources> _
<style>
    .control-block .author-subtitle {
        color: #fefefe !important;
        font-weight: 300;
    }

    .author-title {
        color: #fefefe !important;
        font-weight: 300;
    }

    .header {
        height: 70px;
        background-color: @SuiteOptions.ABS.Portal.Options.Branding.Dashboard.Color;
        padding-right: 70px;
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        z-index: 21;
    }

</style>
<!-- Portal Header -->
<header class="header" id="site-header">
    <div class="page-title">
        <h6>@SuiteOptions.ABS.Portal.Options.Branding.Dashboard.Title</h6>
    </div>
    <div class="header-content-wrapper">
        <div class="control-block">
            <!-- Discover -->
            <div class="author-page author vcard inline-items more" style="margin-left: 5px; margin-right:5px">
                <a class="author-name fn" style="cursor:pointer">
                    <div class="author-title">
                        @_["Discover"] &nbsp;<i class="fas fa-caret-down"></i>
                    </div>
                    <span class="author-subtitle">@_["The Network"]</span>
                </a>
                <div class="author-thumb">
                    <div class="more-dropdown more-with-triangle">
                        <ul class="mCustomScrollbar" style="padding:5px;">
                            <li class="mCustomScrollbar" data-mcs-theme="dark">
                                <div class="ui-block-title ui-block-title-small">
                                    <h6 class="title">@_["For Everyone"]</h6>
                                </div>
                                <ul>
                                    <li>
                                        <a href="https://www.fenixalliance.com.co/blogs">
                                            <i class="fas fa-comments"></i>&nbsp;
                                            <span>@_["Blogs"]</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="https://www.fenixalliance.com.co/forums">
                                            <i class="fas fa-university"></i>&nbsp;
                                            <span>@_["Forums"]</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="https://docs.fenixalliance.com.co/">
                                            <i class="fas fa-copy"></i>&nbsp;
                                            <span>@_["Documentation"]</span>
                                        </a>
                                    </li>

                                    <li>
                                        <a asp-area="Social" asp-controller="Businesses" asp-action="Index">
                                            <i class="fas fa-briefcase"></i>&nbsp;
                                            <span>@_["Business Network"]</span>
                                        </a>
                                    </li>

                                    <li>
                                        <a asp-area="Social" asp-controller="Holders" asp-action="Index">
                                            <i class="fas fa-users"></i>&nbsp;
                                            <span>Alliance ID Network</span>
                                        </a>
                                    </li>

                                    <li>
                                        <a asp-area="Store" asp-controller="Home" asp-action="Index">
                                            <i class="fas fa-infinity"></i>&nbsp;
                                            <span>@_["Marketplace"]</span>
                                        </a>
                                    </li>

                                </ul>
                                <div class="ui-block-title ui-block-title-small">
                                    <hr />
                                    <h6 class="title">@_["For Partners and Startups"]</h6>
                                </div>
                                <ul>
                                    <li>
                                        <a asp-area="Startups" asp-controller="Home" asp-action="Index">
                                            <i class="fas fa-hands-helping"></i>&nbsp;
                                            <span>@_["Alliance for Startups"]</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-area="Partner" asp-controller="Home" asp-action="Index">
                                            <i class="fas fa-handshake"></i>&nbsp;
                                            <span>@_["Partner Network"]</span>
                                        </a>
                                    </li>
                                </ul>
                                <div class="ui-block-title ui-block-title-small">
                                    <hr />
                                    <h6 class="title">@_["For Developers"]</h6>
                                </div>
                                <ul>
                                    <li>
                                        <a asp-area="Developer" asp-controller="Home" asp-action="Index">
                                            <i class="fas fa-code"></i>&nbsp;
                                            <span>@_["Developer Center"]</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="/api/v2/documentation">
                                            <i class="fas fa-file-code"></i>&nbsp;
                                            <span>@_["Developer API Docs"]</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- Discover -->
            <div class="author-page author vcard inline-items more" style="margin-left: 5px; margin-right:5px">
                <a class="author-name fn" style="cursor:pointer">
                    <div class="author-title">
                        @_["Quick Actions"] &nbsp;<i class="fas fa-caret-down"></i>
                    </div>
                    <span class="author-subtitle">@_["Easy Access Shortcuts"]</span>
                </a>
                <div class="author-thumb">
                    <div class="more-dropdown more-with-triangle">
                        <ul class="mCustomScrollbar" style="padding:5px;">
                            <li class="mCustomScrollbar" data-mcs-theme="dark">
                                <div class="ui-block-title ui-block-title-small">
                                    <h6 class="title">@_["For Holders"]</h6>
                                </div>
                                <ul>
                                    <li>
                                        <a asp-area="Business" asp-controller="MyBusiness" asp-action="Create">
                                            <i class="fas fa-suitcase"></i>&nbsp;
                                            <span>@_["Create Tenant"]</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-area="ID" asp-controller="MyAddresses" asp-action="Create">
                                            <i class="fas fa-map"></i>&nbsp;
                                            <span>@_["Create Address"]</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-area="ID" asp-controller="MyWishLists" asp-action="Index">
                                            <i class="fas fa-star"></i>&nbsp;
                                            <span>@_["Create WishList"]</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-area="Careers" asp-controller="MyCareersProfile" asp-action="Index">
                                            <i class="fas fa-user-graduate"></i>&nbsp;
                                            <span>@_["View Curriculum"]</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-area="Partner" asp-controller="PersonaPartnerProfile" asp-action="Create">
                                            <i class="fas fa-handshake"></i>&nbsp;
                                            <span>@_["View Partner Profile"]</span>
                                        </a>
                                    </li>
                                </ul>
                                @if (User.Identity.IsAuthenticated)
                                {

                                    <!-- Business Cart and notifications -->
                                    @if (Model.SelectedBusiness != null)
                                    {
                                        @if (Model.SelectedBusiness.BusinessCart != null)
                                        {
                                            <div class="ui-block-title ui-block-title-small">
                                                <hr />
                                                <h6 class="title">@_["For Business Tenants"]</h6>
                                            </div>
                                            <ul>
                                                <li>
                                                    <a asp-area="Contacts" asp-controller="Individuals" asp-action="Index">
                                                        <i class="fas fa-address-book"></i>&nbsp;
                                                        <span>@_["View Individuals"]</span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a asp-area="Contacts" asp-controller="Organizations" asp-action="Index">
                                                        <i class="fas fa-building"></i>&nbsp;
                                                        <span>@_["View Organizations"]</span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a asp-area="Store" asp-controller="Products" asp-action="Admin">
                                                        <i class="fas fa-boxes"></i>&nbsp;
                                                        <span>@_["View Products"]</span>
                                                    </a>
                                                </li>

                                                <li>
                                                    <a asp-area="Careers" asp-controller="JobOffers" asp-action="Index">
                                                        <i class="fas fa-user-tie"></i>&nbsp;
                                                        <span>@_["View Job Offers"]</span>
                                                    </a>
                                                </li>

                                                <li>
                                                    <a asp-area="Business" asp-controller="MyBusinessPersonnel" asp-action="Index">
                                                        <i class="fas fa-user-plus"></i>&nbsp;
                                                        <span>@_["View Users"]</span>
                                                    </a>
                                                </li>

                                                <li>
                                                    <a asp-area="Business" asp-controller="MyBusinessTeams" asp-action="Index">
                                                        <i class="fas fa-users-cog"></i>&nbsp;
                                                        <span>@_["View Teams"]</span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a asp-area="Business" asp-controller="MyBusinessLocations" asp-action="Index">
                                                        <i class="fas fa-map"></i>&nbsp;
                                                        <span>@_["Business Locations"]</span>
                                                    </a>
                                                </li>
                                                <li>
                                                    <a asp-area="Partner" asp-controller="BusinessPartnerProfile" asp-action="Create">
                                                        <i class="fas fa-handshake"></i>&nbsp;
                                                        <span>@_["Partner Profile"]</span>
                                                    </a>
                                                </li>

                                            </ul>
                                        }
                                    }
                                }
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            @if (User.Identity.IsAuthenticated)
            {

                <!-- Business Cart and notifications -->
                @if (Model.SelectedBusiness != null)
                {
                    @if (Model.SelectedBusiness.BusinessCart != null)
                    {
                        @await Component.InvokeAsync("BusinessCart", new { Tenant = Model });
                    }
                    @if (Model.SelectedBusiness.BusinessSocialProfile?.Notifications != null)
                    {
                        @await Component.InvokeAsync("BusinessNotifications", new { Tenant = Model });
                    }
                }
                <!-- Business Cart and notifications -->
                @await Component.InvokeAsync("AccountHolderNotifications", new { Tenant = Model })
                @await Component.InvokeAsync("AccountHolderCart", new { Tenant = Model })
                @await Component.InvokeAsync("AccountDropdown", new { Tenant = Model })
            }
            else
            {
                <a asp-area="" asp-controller="Account" asp-action="SignIn" style="margin:10px;" class="btn btn-blue btn-icon-left">
                    @_["SIGN IN"]
                    <div class="ripple-container"></div>
                </a>

                <a asp-area="" asp-controller="Account" asp-action="SignIn" style="margin:10px; fill:#4CAF50;" class="btn btn-green btn-icon-left">
                    @_["GET STARTED"]
                    <div class="ripple-container"></div>
                </a>
            }
        </div>
    </div>
</header>
