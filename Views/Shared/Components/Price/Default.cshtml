
@{
    var Currency = (string)ViewData["CurrencyCode"];
    var PrintUnformatted = (bool)ViewData["PrintUnformatted"];
    var Amount = (double)ViewData["Amount"];
}

@if (ViewBag.PrintUnformatted)
{
    @if (ViewBag.DisplayDiscountPrice)
    {
        <text>
            fx.convert(@Amount, { from: '@Currency', to: CartCurrencyCode })
        </text>
    }
    else
    {
        <text>
            fx.convert(@Amount, { from: '@Currency', to: CartCurrencyCode })
        </text>
    }
}
else
{
    <script>
        document.write(CurrencyFormatter.format(fx.convert(@Amount.ToString().Replace(',','.'), { from: '@Currency', to: CartCurrencyCode })));
    </script>
}
